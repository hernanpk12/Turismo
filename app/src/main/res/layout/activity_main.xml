<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo3"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/fotoMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/imagen1"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/nombreMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Nombre"
        android:textStyle="bold"
        android:textSize="18sp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/fotoMain"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/lugarMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Lugar:4356987"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/nombreMain"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/precioMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Precio:4356987"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/lugarMain"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/descripcionMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/descripcion1"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/precioMain"
        app:layout_constraintStart_toStartOf="parent"/>





</androidx.constraintlayout.widget.ConstraintLayout>